<% provide(:title, "Create a Course") %>


<div class = "row">
  <div class="col-md-6 col-md-offset-3 create-course-header">
    <h1>Create a course</h1>
    <%= form_for @class, url: 'courses', local: true, :method=> :POST, :html=>{:id=>"create_form"} do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Create!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</br>
<div>
  <% @all_classes.each do |x| %>
    <div class="created-course-box"
      <br>
      <div class="created-course-top">
        <h4>Course Name: <%= x.name %></h4>
        <p>
          Course Link: <%= link_to request.base_url + '/join/' + x.id.to_s, "/join/" + x.id.to_s %>
        </p>
      </div>
      <div class="created-course-bottom">
        <%= button_to "delete", course_path(:id => x.id), :method => :delete %>
      </div>
    </div>
    </br>
  <% end %>
</div>
