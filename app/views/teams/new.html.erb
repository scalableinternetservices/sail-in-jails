<% provide(:title, 'New Team') %>
<h1>Create team</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@team) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :desc %>
      <%= f.text_field :desc %>

      <%= f.label :course %>
      <%= f.text_field :course %>

      <%= f.submit "Create team", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
