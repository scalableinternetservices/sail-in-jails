<h1>Welcome to the Team!!! </h1>

<ul>
  <p>
    <h4> Team Name: </h4> <%= @team.name %>

    <br></br>

    <h4> Team Description: </h4> <%= @team.desc %>

    <br><br>

    <h4> Team Members: </h4>

    <% if @members.each do |member| %>
      <%= member.name %>
      <br>
    <% end.empty? %>
      No members :(
    <% end %>

    <br><br>
    <%= link_to "Update Team Profile", '/edit_team/' + @team.id.to_s , class: "btn btn-medium btn-primary" %>
    <%= button_to 'Join Team Now!', action: "add_user", :method => :post %>
  </p>
</ul>
